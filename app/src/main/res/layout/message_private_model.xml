<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/receiver_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/receiver_img"
        android:background="@drawable/receiver_message"
        android:gravity="center"
        android:maxWidth="200dp"
        android:padding="10dp"
        android:text="reciewer"
        android:textSize="20sp"
        android:visibility="gone" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_image"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sender_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sender_message"
        android:gravity="center"
        android:maxWidth="200dp"
        android:padding="10dp"
        android:text="sender"
        android:textSize="20sp"
        android:visibility="gone" />

</RelativeLayout>